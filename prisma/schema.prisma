generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  password   String
  lists      List[]
  token      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model List {
  id         Int  @id @default(autoincrement())
  listName   String
  ownerId    String
  owner      User @relation(fields: [ownerId], references: [id])
  favs       Fav[]
}

model Fav {
  id           Int  @id @default(autoincrement())
  title        String
  description  String
  link         String
  listOwner    List[]
}